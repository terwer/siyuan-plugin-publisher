@import './variables.styl'

// 重置样式
*
  margin 0
  padding 0
  box-sizing border-box

html, body
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif
  font-size $pt-font-size-base
  line-height $pt-line-height-base
  color $pt-text-color
  background-color $pt-bg-color
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

// 顶层容器样式
#publisherApp
  width 100%
  height 100%
  min-height 100vh
  display flex
  flex-direction column

// 通用样式类
.pt-text
  &-primary
    color $pt-text-color
  &-secondary
    color $pt-text-color-secondary
  &-disabled
    color $pt-text-color-disabled

.pt-bg
  &-primary
    background-color $pt-bg-color
  &-light
    background-color $pt-bg-color-light

.pt-border
  border $pt-border-width $pt-border-style $pt-border-color
  &-split
    border-color $pt-border-color-split

.pt-shadow
  box-shadow $pt-box-shadow
  &-sm
    box-shadow $pt-box-shadow-sm
  &-lg
    box-shadow $pt-box-shadow-lg

// 间距类
.pt-m
  &-xs
    margin $pt-margin-xs
  &-sm
    margin $pt-margin-sm
  &-md
    margin $pt-margin-md
  &-lg
    margin $pt-margin-lg
  &-xl
    margin $pt-margin-xl

.pt-p
  &-xs
    padding $pt-padding-xs
  &-sm
    padding $pt-padding-sm
  &-md
    padding $pt-padding-md
  &-lg
    padding $pt-padding-lg
  &-xl
    padding $pt-padding-xl

// 字体大小类
.pt-font
  &-sm
    font-size $pt-font-size-sm
  &-base
    font-size $pt-font-size-base
  &-lg
    font-size $pt-font-size-lg

// 行高类
.pt-line-height
  &-sm
    line-height $pt-line-height-sm
  &-base
    line-height $pt-line-height-base
  &-lg
    line-height $pt-line-height-lg

// 圆角类
.pt-radius
  &-sm
    border-radius $pt-border-radius-sm
  &-base
    border-radius $pt-border-radius-base
  &-lg
    border-radius $pt-border-radius-lg

// 动画类
.pt-transition
  transition all $pt-transition-duration $pt-transition-timing
  &-fast
    transition-duration $pt-animation-duration-fast
  &-slow
    transition-duration $pt-animation-duration-slow 