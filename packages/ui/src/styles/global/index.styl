  text-decoration: none
  background-color: transparent
  outline: none
  cursor: pointer
  transition: color $animation-duration-base

  &:hover
    color: $link-hover-color

  &:active
    color: $link-active-color

  &[disabled]
    color: $text-color-disabled
    cursor: not-allowed
    pointer-events: none

