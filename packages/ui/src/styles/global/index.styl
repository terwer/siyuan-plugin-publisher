    .shadow-xl
      box-shadow: $shadow-xl-dark

  // 基础按钮样式
  .pt-btn
    button-base()
    border-base()
    background: $bg-color
    color: $text-color

    &:hover:not(.pt-btn--disabled)
      color: $primary-color
      border-color: $primary-color
      background: $bg-color

    &:active:not(.pt-btn--disabled)
      color: #096dd9
      border-color: #096dd9
      background: $bg-color

  // 基础表单样式
  .pt-form
    form-item-base()

  // 基础输入框样式
  .pt-input
    input-base()

  // 基础标签页样式
  .pt-tabs
    &-nav
      margin-bottom: $spacing-md
      border-bottom: 1px solid $border-color

    &-tab
      padding: $spacing-md
      cursor: pointer
      transition-base()

      &:hover
        color: $primary-color

      &-active
        color: $primary-color
        font-weight: 500

  // 基础提示框样式
  .pt-tooltip
