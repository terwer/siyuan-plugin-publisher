      border-color: $border-color-base-dark

    // 阴影
    .shadow-sm
      box-shadow: $shadow-sm-dark

    .shadow
      box-shadow: $shadow-base-dark

    .shadow-md
      box-shadow: $shadow-md-dark

    .shadow-lg
