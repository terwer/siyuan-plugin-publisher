@import '../variables.styl'

.pt-tooltip
  position absolute
  z-index $pt-zindex-tooltip
  display block
  visibility visible
  font-size $pt-font-size-base
  line-height $pt-line-height-base
  opacity 0
  transition opacity $pt-transition-duration $pt-transition-timing

  &-visible
    opacity 1

  // 工具提示内容
  &-content
    position relative
    max-width 250px
    padding 6px 8px
    color #fff
    text-align left
    text-decoration none
    word-wrap break-word
    background-color rgba(0, 0, 0, 0.75)
    border-radius $pt-border-radius-base
    box-shadow $pt-box-shadow

  // 工具提示箭头
  &-arrow
    position absolute
    display block
    width 8px
    height 8px
    background-color rgba(0, 0, 0, 0.75)
    transform rotate(45deg)

    &-content
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      display block
      width 8px
      height 8px
      margin auto
      background-color rgba(0, 0, 0, 0.75)
      content ''

  // 工具提示位置
  &-placement
    &-top
      .pt-tooltip-arrow
        bottom -4px
        left 50%
        transform translateX(-50%) rotate(45deg)

    &-topLeft
      .pt-tooltip-arrow
        bottom -4px
        left 16px
        transform rotate(45deg)

    &-topRight
      .pt-tooltip-arrow
        bottom -4px
        right 16px
        transform rotate(45deg)

    &-right
      .pt-tooltip-arrow
        top 50%
        left -4px
        transform translateY(-50%) rotate(45deg)

    &-rightTop
      .pt-tooltip-arrow
        top 12px
        left -4px
        transform rotate(45deg)

    &-rightBottom
      .pt-tooltip-arrow
        bottom 12px
        left -4px
        transform rotate(45deg)

    &-bottom
      .pt-tooltip-arrow
        top -4px
        left 50%
        transform translateX(-50%) rotate(45deg)

    &-bottomLeft
      .pt-tooltip-arrow
        top -4px
        left 16px
        transform rotate(45deg)

    &-bottomRight
      .pt-tooltip-arrow
        top -4px
        right 16px
        transform rotate(45deg)

    &-left
      .pt-tooltip-arrow
        top 50%
        right -4px
        transform translateY(-50%) rotate(45deg)

    &-leftTop
      .pt-tooltip-arrow
        top 12px
        right -4px
        transform rotate(45deg)

    &-leftBottom
      .pt-tooltip-arrow
        bottom 12px
        right -4px
        transform rotate(45deg)

  // 工具提示动画
  &-fade-enter
    opacity 0
    transform scale(0.8)

  &-fade-enter-active
    opacity 1
    transform scale(1)

  &-fade-exit
    opacity 1
    transform scale(1)

  &-fade-exit-active
    opacity 0
    transform scale(0.8)

  // 工具提示触发元素
  &-trigger
    display inline-block
    cursor pointer

  // 工具提示主题
  &-theme
    &-light
      .pt-tooltip-content
        color $pt-text-color
        background-color $pt-bg-color
        box-shadow $pt-box-shadow

      .pt-tooltip-arrow
        background-color $pt-bg-color

        &-content
          background-color $pt-bg-color

    &-dark
      .pt-tooltip-content
        color #fff
        background-color rgba(0, 0, 0, 0.75)

      .pt-tooltip-arrow
        background-color rgba(0, 0, 0, 0.75)

        &-content
          background-color rgba(0, 0, 0, 0.75) 