.tg-date-picker
  position relative
  display inline-block
  width 100%

  &__wrapper
    position relative
    display flex
    align-items center

  &__input
    width 100%
    height 32px
    padding 0 $tg-spacing-lg
    font-size $tg-font-size-base
    line-height 32px
    color var(--tg-color-text)
    background-color var(--tg-color-bg)
    border 1px solid var(--tg-color-border)
    border-radius $tg-border-radius-base
    transition all $tg-transition-duration

    &::-webkit-calendar-picker-indicator
      opacity 0
      position absolute
      right 0
      top 0
      width 100%
      height 100%
      cursor pointer

    &:hover
      border-color var(--tg-color-primary-hover)

    &:focus
      border-color var(--tg-color-primary)
      outline none
      box-shadow 0 0 0 2px var(--tg-color-primary-light)

    &:disabled
      color var(--tg-color-text-disabled)
      background-color var(--tg-color-bg-disabled)
      cursor not-allowed

  &__icon
    position absolute
    right $tg-spacing-lg
    color var(--tg-color-text-secondary)
    pointer-events none

  &__clear
    position absolute
    right $tg-spacing-xl
    color var(--tg-color-text-secondary)
    cursor pointer
    transition color $tg-transition-duration

    &:hover
      color var(--tg-color-text)

  &--large
    .tg-date-picker__input
      height 40px
      font-size $tg-font-size-lg
      line-height 40px

  &--small
    .tg-date-picker__input
      height 24px
      font-size $tg-font-size-sm
      line-height 24px
      padding 0 $tg-spacing-md

  &--disabled
    cursor not-allowed

    .tg-date-picker__input
      color var(--tg-color-text-disabled)
      background-color var(--tg-color-bg-disabled)
      cursor not-allowed

  &--error
    .tg-date-picker__input
      border-color var(--tg-color-error)

    &:hover
      .tg-date-picker__input
        border-color var(--tg-color-error)

    &:focus
      .tg-date-picker__input
        border-color var(--tg-color-error)
        box-shadow 0 0 0 2px var(--tg-color-error-light) 