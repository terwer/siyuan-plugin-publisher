@import '../variables.styl'

.pt-modal
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index $pt-zindex-modal
  display flex
  align-items center
  justify-content center
  width 100%
  height 100%
  overflow auto
  background-color rgba(0, 0, 0, 0.45)
  opacity 0
  transition opacity $pt-transition-duration $pt-transition-timing

  &-visible
    opacity 1

  // 模态框内容
  &-content
    position relative
    display flex
    flex-direction column
    width 100%
    max-width 520px
    margin 0 auto
    background-color $pt-bg-color
    border-radius $pt-border-radius-base
    box-shadow $pt-box-shadow
    pointer-events auto
    transform scale(0.5)
    transition transform $pt-transition-duration $pt-transition-timing

    .pt-modal-visible &
      transform scale(1)

  // 模态框头部
  &-header
    display flex
    align-items center
    justify-content space-between
    padding 16px 24px
    color $pt-text-color
    background $pt-bg-color
    border-bottom $pt-border-width $pt-border-style $pt-border-color-split
    border-radius $pt-border-radius-base $pt-border-radius-base 0 0

  // 模态框标题
  &-title
    margin 0
    color $pt-text-color
    font-weight 500
    font-size $pt-font-size-lg
    line-height $pt-line-height-lg

  // 模态框关闭按钮
  &-close
    position absolute
    top 16px
    right 16px
    padding 0
    color $pt-text-color-secondary
    font-size $pt-font-size-lg
    line-height 1
    background transparent
    border 0
    outline none
    cursor pointer
    transition color $pt-transition-duration $pt-transition-timing

    &:hover
      color $pt-text-color

  // 模态框主体
  &-body
    flex 1
    padding 24px
    font-size $pt-font-size-base
    line-height $pt-line-height-base
    word-wrap break-word

  // 模态框底部
  &-footer
    display flex
    align-items center
    justify-content flex-end
    padding 10px 16px
    text-align right
    background $pt-bg-color
    border-top $pt-border-width $pt-border-style $pt-border-color-split
    border-radius 0 0 $pt-border-radius-base $pt-border-radius-base

    .pt-btn
      margin-left 8px

      &:first-child
        margin-left 0

  // 模态框尺寸
  &-sm
    .pt-modal-content
      max-width 420px

  &-lg
    .pt-modal-content
      max-width 720px

  &-xl
    .pt-modal-content
      max-width 1024px

  // 模态框类型
  &-info
    .pt-modal-icon
      color $pt-info-color

  &-success
    .pt-modal-icon
      color $pt-success-color

  &-warning
    .pt-modal-icon
      color $pt-warning-color

  &-error
    .pt-modal-icon
      color $pt-error-color

  // 模态框图标
  &-icon
    margin-right 16px
    font-size 22px
    line-height 1

  // 模态框动画
  &-fade-enter
    opacity 0

  &-fade-enter-active
    opacity 1

  &-fade-exit
    opacity 1

  &-fade-exit-active
    opacity 0

  // 模态框遮罩
  &-mask
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    z-index $pt-zindex-modal
    background-color rgba(0, 0, 0, 0.45)
    opacity 0
    transition opacity $pt-transition-duration $pt-transition-timing

    &-visible
      opacity 1

  // 模态框包装器
  &-wrap
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    z-index $pt-zindex-modal
    overflow auto
    outline 0 