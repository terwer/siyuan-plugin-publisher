@import '../base'

#publisherApp
  .pt-button-group
    display: inline-flex
    align-items: center

    .pt-button
      position: relative
      z-index: 1

      &:not(:first-child)
        margin-left: -1px

      &:not(:first-child):not(:last-child)
        border-radius: 0

      &:first-child
        border-top-right-radius: 0
        border-bottom-right-radius: 0

      &:last-child
        border-top-left-radius: 0
        border-bottom-left-radius: 0

      &:hover
        z-index: 2

      &:focus
        z-index: 2

      &:active
        z-index: 2

      &[disabled]
        z-index: 0

      &.button-primary
        &:not(:first-child)
          border-left-color: $primary-color-hover

        &:not(:last-child)
          border-right-color: $primary-color-hover

      &.button-default
        &:not(:first-child)
          border-left-color: $border-color-hover

        &:not(:last-child)
          border-right-color: $border-color-hover

      &.button-dashed
        &:not(:first-child)
          border-left-color: $border-color-hover

        &:not(:last-child)
          border-right-color: $border-color-hover

      &.button-text
        &:not(:first-child)
          border-left-color: transparent

        &:not(:last-child)
          border-right-color: transparent

      &.button-link
        &:not(:first-child)
          margin-left: $spacing-sm
          border-left: none

        &:not(:last-child)
          border-right: none

        color: $primary-color
        background: transparent
        border: none
        padding: 0 $spacing-sm

        &:hover:not(.button-disabled)
          color: $primary-color-hover
          text-decoration: underline

        &:active:not(.button-disabled)
          color: $primary-color-active

      &.button-disabled
        z-index: 0

      &.button-loading
        z-index: 0 