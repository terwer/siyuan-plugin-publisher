@import '../base/variables.styl'
@import '../base/index.styl'

.pt-button-group
  display: inline-flex
  align-items: center

  .pt-button
    position: relative
    z-index: 1

    &:not(:first-child)
      margin-left: -1px

    &:not(:first-child):not(:last-child)
      border-radius: 0

    &:first-child
      border-top-right-radius: 0
      border-bottom-right-radius: 0

    &:last-child
      border-top-left-radius: 0
      border-bottom-left-radius: 0

    &:hover
      z-index: 2

    &:focus
      z-index: 2

    &:active
      z-index: 2

    &[disabled]
      z-index: 0

    &.pt-button-primary
      &:not(:first-child)
        border-left-color: $pt-color-primary-hover

      &:not(:last-child)
        border-right-color: $pt-color-primary-hover

    &.pt-button-default
      &:not(:first-child)
        border-left-color: $pt-color-border-hover

      &:not(:last-child)
        border-right-color: $pt-color-border-hover

    &.pt-button-dashed
      &:not(:first-child)
        border-left-color: $pt-color-border-hover

      &:not(:last-child)
        border-right-color: $pt-color-border-hover

    &.pt-button-text
      &:not(:first-child)
        border-left-color: transparent

      &:not(:last-child)
        border-right-color: transparent

    &.pt-button-link
      &:not(:first-child)
        margin-left: $pt-spacing-sm
        border-left: none

      &:not(:last-child)
        border-right: none

      color: $pt-color-primary
      background: transparent
      border: none
      padding: 0 $pt-spacing-sm

      &:hover:not(.pt-button-disabled)
        color: $pt-color-primary-hover
        text-decoration: underline

      &:active:not(.pt-button-disabled)
        color: $pt-color-primary-active

    &.pt-button-disabled
      z-index: 0

    &.pt-button-loading
      z-index: 0 