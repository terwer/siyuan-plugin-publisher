#publisherApp
  // Tab 组件样式
  .pt-tab
    display: flex
    flex-direction: column
    width: 100%

    &__header
      display: flex
      border-bottom: 1px solid var(--pt-border-color)
      margin-bottom: 16px

    &__nav
      display: flex
      list-style: none
      margin: 0
      padding: 0

    &__item
      padding: 8px 16px
      cursor: pointer
      color: var(--pt-text-color-secondary)
      transition: all 0.3s
      position: relative

      &:hover
        color: var(--pt-primary-color)

      &--active
        color: var(--pt-primary-color)

        &::after
          content: ""
          position: absolute
          bottom: -1px
          left: 0
          width: 100%
          height: 2px
          background-color: var(--pt-primary-color)

    &__content
      flex: 1

    &__pane
      display: none

      &--active
        display: block

  // Tooltip 组件样式
  .pt-tooltip
    position: relative
    display: inline-block

    &__content
      position: absolute
      z-index: 1000
      padding: 8px 12px
      background-color: var(--pt-tooltip-bg)
      color: var(--pt-tooltip-color)
      border-radius: 4px
      font-size: 12px
      line-height: 1.5
      white-space: nowrap
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15)
      opacity: 0
      visibility: hidden
      transition: all 0.3s

      &--visible
        opacity: 1
        visibility: visible

      &--top
        bottom: 100%
        left: 50%
        transform: translateX(-50%) translateY(-8px)

      &--bottom
        top: 100%
        left: 50%
        transform: translateX(-50%) translateY(8px)

      &--left
        right: 100%
        top: 50%
        transform: translateY(-50%) translateX(-8px)

      &--right
        left: 100%
        top: 50%
        transform: translateY(-50%) translateX(8px)

  // SettingPanel 组件样式
  .pt-setting-panel
    position: fixed
    top: 0
    right: 0
    bottom: 0
    width: 300px
    background-color: var(--pt-bg-color)
    box-shadow: -2px 0 8px rgba(0, 0, 0, 0.15)
    z-index: 1000
    transform: translateX(100%)
    transition: transform 0.3s

    &--visible
      transform: translateX(0)

    &__header
      display: flex
      align-items: center
      justify-content: space-between
      padding: 16px
      border-bottom: 1px solid var(--pt-border-color)

    &__title
      font-size: 16px
      font-weight: 500
      color: var(--pt-text-color)
      margin: 0

    &__close
      cursor: pointer
      color: var(--pt-text-color-secondary)
      transition: color 0.3s

      &:hover
        color: var(--pt-text-color)

    &__body
      padding: 16px
      height: calc(100% - 57px)
      overflow-y: auto

    &__footer
      padding: 16px
      border-top: 1px solid var(--pt-border-color)
      display: flex
      justify-content: flex-end
      gap: 8px 