.tg-app-shell
  display flex
  width 100%
  height 100%
  background-color var(--tg-color-bg)
  border-radius $tg-border-radius-lg
  box-shadow 0 2px 8px rgba(0, 0, 0, 0.15)
  overflow hidden

  &__nav
    width 200px
    height 100%
    background-color var(--tg-color-bg)
    border-right 1px solid var(--tg-color-border)
    transition all 0.3s ease-in-out
    display flex
    flex-direction column
    position relative
    z-index 1

    &--collapsed
      width 0
      border-right none

      .tg-app-shell__nav-header,
      .tg-app-shell__nav-content
        visibility hidden
        opacity 0

    &-header
      height 64px
      display flex
      align-items center
      padding 0 $tg-spacing-lg
      border-bottom 1px solid var(--tg-color-border)
      transition all 0.3s ease-in-out

    &-content
      flex 1
      overflow-y auto
      padding $tg-spacing-md
      transition all 0.3s ease-in-out

      &::-webkit-scrollbar
        width 6px

      &::-webkit-scrollbar-thumb
        background-color var(--tg-color-border)
        border-radius 3px

      &::-webkit-scrollbar-track
        background-color transparent

    &-item
      display flex
      align-items center
      padding $tg-spacing-sm $tg-spacing-md
      margin-bottom $tg-spacing-xs
      border-radius $tg-border-radius-base
      cursor pointer
      transition all 0.3s ease-in-out
      color var(--tg-color-text-2)

      &:hover
        background-color var(--tg-color-bg-hover)
        color var(--tg-color-text-1)

      &--active
        background-color var(--tg-color-bg-hover)
        color var(--tg-color-primary)

      &--disabled
        cursor not-allowed
        opacity 0.5
        pointer-events none

      &-icon
        margin-right $tg-spacing-sm
        font-size $tg-font-size-lg

      &-text
        flex 1
        white-space nowrap
        overflow hidden
        text-overflow ellipsis

  &__collapse-handle
    position absolute
    right -12px
    top 50%
    transform translateY(-50%)
    width 24px
    height 24px
    background-color var(--tg-color-bg)
    border 1px solid var(--tg-color-border)
    border-radius 50%
    display flex
    align-items center
    justify-content center
    cursor pointer
    z-index 2
    transition all 0.3s ease-in-out

    &:hover
      background-color var(--tg-color-bg-hover)
      transform translateY(-50%) scale(1.1)

  &__main
    flex 1
    display flex
    flex-direction column
    overflow hidden
    position relative
    z-index 0

  &__header
    height 64px
    display flex
    align-items center
    padding 0 $tg-spacing-lg
    border-bottom 1px solid var(--tg-color-border)
    background-color var(--tg-color-bg)

  &__content
    flex 1
    overflow-y auto
    padding $tg-spacing-lg
    background-color var(--tg-color-bg)

    &::-webkit-scrollbar
      width 6px

    &::-webkit-scrollbar-thumb
      background-color var(--tg-color-border)
      border-radius 3px

    &::-webkit-scrollbar-track
      background-color transparent

  &__content-item
    flex 1
    overflow-y auto

  &__content-item-header
    height 64px
    padding 0 $tg-spacing-lg
    display flex
    align-items center
    justify-content space-between
    border-bottom 1px solid var(--tg-color-border)
    background-color var(--tg-color-bg)

  &__content-item-header-title
    font-size $tg-font-size-lg
    font-weight bold

  &__content-item-header-actions
    display flex
    align-items center

  &__content-item-header-action
    margin-left $tg-spacing-md
    cursor pointer

  &__content-item-header-action-icon
    font-size $tg-font-size-lg

  &__content-item-body
    padding $tg-spacing-lg
    overflow-y auto

  &__content-item-body-title
    font-size $tg-font-size-lg
    font-weight bold
    margin-bottom $tg-spacing-md

  &__content-item-body-description
    color var(--tg-color-text-2)

  &__content-item-body-actions
    margin-top $tg-spacing-lg
    display flex
    justify-content space-between

  &__content-item-body-action
    cursor pointer

  &__content-item-body-action-icon
    font-size $tg-font-size-lg
    margin-left $tg-spacing-md

  &__content-item-body-action-text
    color var(--tg-color-text-2)

  &__content-item-body-action-text-highlight
    color var(--tg-color-primary) 