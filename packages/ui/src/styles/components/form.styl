@import '../base'

#publisherApp
  .pt-form
    position: relative
    width: 100%
    display: flex
    flex-direction: column
    gap: $spacing-xl

    // 水平布局
    &--horizontal
      .pt-form-item
        display: flex
        flex-wrap: nowrap

        .pt-form-item__label
          flex: 0 0 auto

        .pt-form-item__control
          flex: 1 1 auto

    // 垂直布局
    &--vertical
      .pt-form-item
        display: block
        text-align: left
        margin-bottom: $spacing-sm

    // 行内布局
    &--inline
      display: flex
      flex-wrap: wrap
      align-items: flex-start

      .pt-form-item
        display: flex
        flex-wrap: nowrap
        margin-right: $spacing-lg
        margin-bottom: 0

        &:last-child
          margin-right: 0

  .pt-form-item
    position: relative
    margin-bottom: $spacing-xl
    vertical-align: top

    &:last-child
      margin-bottom: 0

    &__label
      display: inline-block
      flex-grow: 0
      overflow: hidden
      white-space: nowrap
      text-align: right
      vertical-align: middle

      &-left
        text-align: left

      &-required
        &::before
          display: inline-block
          margin-right: $spacing-xs
          color: $error-color
          font-size: $font-size-base
          line-height: 1
          content: '*'

      &-colon
        &::after
          content: ':'
          margin: 0 $spacing-sm 0 $spacing-xs

    &__control
      position: relative
      display: flex
      flex-direction: column
      flex-grow: 1

    &__message
      position: absolute
      top: 100%
      left: 0
      margin-top: $spacing-xs
      color: $text-color-secondary
      font-size: $font-size-sm
      line-height: $line-height-base

  .pt-form-control
    width: 100%

  .pt-form-message
    color: $text-color-secondary
    font-size: $font-size-sm
    line-height: $line-height-base

  // 表单尺寸
  &-small
    .pt-form-item
      margin-bottom: $spacing-lg

    .pt-form-item__label
      font-size: $font-size-sm

    .pt-form-item__message
      font-size: $font-size-sm

  &-large
    .pt-form-item
      margin-bottom: $spacing-xl * 2

    .pt-form-item__label
      font-size: $font-size-lg

    .pt-form-item__message
      font-size: $font-size-lg

  // 表单验证
  &-validate-status
    &-success
      .pt-form-item__control-input
        background-color: $success-color

    &-warning
      .pt-form-item__control-input
        background-color: $warning-color

    &-error
      .pt-form-item__control-input
        background-color: $error-color

    &-validating
      .pt-form-item__control-input
        background-color: $info-color

  // 表单操作
  &-actions
    display: flex
    justify-content: flex-end
    margin-top: $spacing-xl

    .pt-btn
      margin-left: $spacing-sm

      &:first-child
        margin-left: 0 