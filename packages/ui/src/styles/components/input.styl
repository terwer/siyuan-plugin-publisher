@import '../base'

.pt-input
  input-base()
  position: relative
  display: inline-flex
  min-width: 0

  &:hover
    border-color: $primary-color

  &:focus
    border-color: $primary-color
    box-shadow: 0 0 0 2px rgba($primary-color, 0.2)
    outline: 0

  &[disabled]
    color: $text-color-disabled
    background-color: $bg-color-light
    disabled()

  // 尺寸变体
  &-sm
    padding: 0 $spacing-sm
    font-size: $font-size-sm
    height: $height-sm
    line-height: $height-sm

  &-lg
    padding: 0 $spacing-md
    font-size: $font-size-lg
    height: $height-lg
    line-height: $height-lg

  // 状态变体
  &-error
    border-color: $error-color

    &:hover
      border-color: $error-color

    &:focus
      border-color: $error-color
      box-shadow: 0 0 0 2px rgba($error-color, 0.2)

  &-warning
    border-color: $warning-color

    &:hover
      border-color: $warning-color

    &:focus
      border-color: $warning-color
      box-shadow: 0 0 0 2px rgba($warning-color, 0.2)

  // 前缀和后缀
  &-prefix
    display: flex
    align-items: center
    margin-right: $spacing-xs
    color: $text-color-secondary

  &-suffix
    display: flex
    align-items: center
    margin-left: $spacing-xs
    color: $text-color-secondary

  // 文本域
  &-textarea
    min-height: $height-base
    max-width: 100%
    height: auto
    line-height: $line-height-base
    vertical-align: bottom
    transition-base()
    resize: vertical

  // 搜索框
  &-search
    .pt-input
      border-right: 0

    .pt-btn
      border-top-left-radius: 0
      border-bottom-left-radius: 0

  // 密码框
  &-password
    .pt-input-suffix
      cursor: pointer

  // 组合输入框
  &-group
    display: inline-flex
    width: 100%

    .pt-input
      flex: 1
      min-width: 0

    .pt-input:not(:first-child)
      border-top-left-radius: 0
      border-bottom-left-radius: 0

    .pt-input:not(:last-child)
      border-top-right-radius: 0
      border-bottom-right-radius: 0

    .pt-btn
      border-top-left-radius: 0
      border-bottom-left-radius: 0

  // 清除按钮
  &-clear
    position: absolute
    right: $spacing-md
    top: 50%
    transform: translateY(-50%)
    color: $text-color-secondary
    cursor: pointer
    transition-base()

    &:hover
      color: $text-color

  // 字数统计
  &-count
    position: absolute
    right: $spacing-md
    bottom: -20px
    color: $text-color-secondary
    font-size: $font-size-sm 