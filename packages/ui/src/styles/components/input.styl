@import '../base/variables.styl'
@import '../base/mixins.styl'

.tg-input
  position relative
  display inline-flex
  width 100%
  height $tg-height-base
  transition-base()

  &__wrapper
    display inline-flex
    width 100%
    height 100%
    border-base()
    background-color #fff
    transition-base()

    &:hover
      border-color $tg-color-primary

    &:focus-within
      border-color $tg-color-primary
      box-shadow 0 0 0 2px rgba($tg-color-primary, 0.2)

  &__inner
    flex 1
    width 100%
    height 100%
    padding 0 $tg-spacing-sm
    font-size $tg-font-size-base
    color $tg-text-color
    background none
    border none
    outline none

    &::placeholder
      color $tg-text-color-secondary

  &__prefix,
  &__suffix
    display inline-flex
    align-items center
    padding 0 $tg-spacing-sm
    color $tg-text-color-secondary

  &--disabled
    .tg-input__wrapper
      background-color #f5f5f5
      cursor not-allowed

    .tg-input__inner
      cursor not-allowed
      color $tg-text-color-secondary

  &--large
    height $tg-height-lg

    .tg-input__inner
      font-size $tg-font-size-lg

  &--small
    height $tg-height-sm

    .tg-input__inner
      font-size $tg-font-size-sm
