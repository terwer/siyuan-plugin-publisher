.tg-select
  position relative
  display inline-block
  width 100%

  &__wrapper
    position relative
    display flex
    align-items center

  &__inner
    width 100%
    padding $tg-spacing-sm $tg-spacing-xl $tg-spacing-sm $tg-spacing-md
    border $tg-border-width solid var(--tg-color-border)
    border-radius $tg-border-radius
    background-color var(--tg-color-bg-1)
    color var(--tg-color-text-1)
    font-size $tg-font-size-base
    line-height $tg-line-height-base
    transition all $tg-transition-duration
    appearance none
    cursor pointer

    &:hover
      border-color var(--tg-color-primary)

    &:focus
      outline none
      border-color var(--tg-color-primary)
      box-shadow 0 0 0 $tg-shadow-spread var(--tg-color-primary-light)

    &:disabled
      background-color var(--tg-color-bg-2)
      cursor not-allowed
      opacity $tg-disabled-opacity

  &__arrow
    position absolute
    right $tg-spacing-md
    top 50%
    transform translateY(-50%)
    color var(--tg-color-text-3)
    pointer-events none

  &__clear
    position absolute
    right $tg-spacing-xl
    top 50%
    transform translateY(-50%)
    color var(--tg-color-text-3)
    cursor pointer
    padding $tg-spacing-xs

    &:hover
      color var(--tg-color-text-1)

  &--large &__inner
    padding $tg-spacing-md $tg-spacing-xl $tg-spacing-md $tg-spacing-lg
    font-size $tg-font-size-lg

  &--small &__inner
    padding $tg-spacing-xs $tg-spacing-lg $tg-spacing-xs $tg-spacing-sm
    font-size $tg-font-size-sm

  &--disabled
    cursor not-allowed

    .tg-select__inner
      background-color var(--tg-color-bg-2)
      cursor not-allowed
      opacity $tg-disabled-opacity

  &--error &__inner
    border-color var(--tg-color-error)

    &:hover
      border-color var(--tg-color-error)

    &:focus
      border-color var(--tg-color-error)
      box-shadow 0 0 0 $tg-shadow-spread var(--tg-color-error-light)

  &--warning &__inner
    border-color var(--tg-color-warning)

    &:hover
      border-color var(--tg-color-warning)

    &:focus
      border-color var(--tg-color-warning)
      box-shadow 0 0 0 $tg-shadow-spread var(--tg-color-warning-light)

  &--success &__inner
    border-color var(--tg-color-success)

    &:hover
      border-color var(--tg-color-success)

    &:focus
      border-color var(--tg-color-success)
      box-shadow 0 0 0 $tg-shadow-spread var(--tg-color-success-light) 