#publisherApp
  .pt-button
    --pt-btn-height: $btn-height-base
    --pt-btn-padding: $btn-padding-base
    --pt-btn-font-size: $btn-font-size-base
    --pt-btn-radius: $btn-radius-base
    --pt-btn-transition: all $animation-duration-base $animation-timing-function-base

    position: relative
    display: inline-flex
    align-items: center
    justify-content: center
    height: var(--pt-btn-height)
    padding: var(--pt-btn-padding)
    font-size: var(--pt-btn-font-size)
    border-radius: var(--pt-btn-radius)
    border: 1px solid transparent
    cursor: pointer
    transition: var(--pt-btn-transition)
    white-space: nowrap
    user-select: none
    outline: none
    gap: 8px
    text-decoration: none
    box-sizing: border-box

    // 类型样式
    &.button-default
      background: $btn-default-bg
      border-color: $btn-default-border
      color: $btn-default-color

      &:hover:not(.button-disabled)
        background: $btn-default-hover-bg
        border-color: $btn-default-hover-border
        color: $btn-default-hover-color

      &:active:not(.button-disabled)
        background: $btn-default-active-bg
        border-color: $btn-default-active-border
        color: $btn-default-active-color

    &.button-primary
      background: $btn-primary-bg
      border-color: $btn-primary-border
      color: $btn-primary-color

      &:hover:not(.button-disabled)
        background: $btn-primary-hover-bg
        border-color: $btn-primary-hover-border
        color: $btn-primary-hover-color

      &:active:not(.button-disabled)
        background: $btn-primary-active-bg
        border-color: $btn-primary-active-border
        color: $btn-primary-active-color

    &.button-dashed
      background: $btn-default-bg
      border-color: $btn-default-border
      border-style: dashed
      color: $btn-default-color

      &:hover:not(.button-disabled)
        background: $btn-default-hover-bg
        border-color: $btn-default-hover-border
        color: $btn-default-hover-color

      &:active:not(.button-disabled)
        background: $btn-default-active-bg
        border-color: $btn-default-active-border
        color: $btn-default-active-color

    &.button-text
      background: transparent
      border-color: transparent
      color: $btn-default-color
      padding: 0 8px

      &:hover:not(.button-disabled)
        background: $btn-default-hover-bg
        color: $btn-default-hover-color

      &:active:not(.button-disabled)
        background: $btn-default-active-bg
        color: $btn-default-active-color

    &.button-link
      background: transparent
      border-color: transparent
      color: $btn-primary-color
      padding: 0

      &:hover:not(.button-disabled)
        color: $btn-primary-hover-color

      &:active:not(.button-disabled)
        color: $btn-primary-active-color

    // 尺寸样式
    &.button-small
      --pt-btn-height: $btn-height-sm
      --pt-btn-padding: $btn-padding-sm
      --pt-btn-font-size: $btn-font-size-sm
      --pt-btn-radius: $btn-radius-sm

    &.button-large
      --pt-btn-height: $btn-height-lg
      --pt-btn-padding: $btn-padding-lg
      --pt-btn-font-size: $btn-font-size-lg
      --pt-btn-radius: $btn-radius-lg

    // 形状样式
    &.button-circle
      --pt-btn-radius: 50%
      padding: 0
      width: var(--pt-btn-height)

    &.button-round
      --pt-btn-radius: calc(var(--pt-btn-height) / 2)

    // 禁用状态
    &.button-disabled
      opacity: 0.6
      cursor: not-allowed

    // 加载状态
    &.button-loading
      cursor: wait

      .loading-icon
        display: inline-block
        width: 14px
        height: 14px
        margin-right: 8px
        border: 2px solid currentColor
        border-radius: 50%
        border-top-color: transparent
        animation: button-loading 0.8s linear infinite

    // 危险按钮
    &.button-danger
      &.button-default
        background: transparent
        border-color: $btn-danger-default-border
        color: $btn-danger-default-color

        &:hover:not(.button-disabled)
          background: $btn-danger-default-hover-bg
          border-color: $btn-danger-default-hover-border
          color: $btn-danger-default-hover-color

        &:active:not(.button-disabled)
          background: $btn-danger-default-active-bg
          border-color: $btn-danger-default-active-border
          color: $btn-danger-default-active-color

      &.button-primary
        background: $btn-danger-bg
        border-color: $btn-danger-border
        color: $btn-danger-color

        &:hover:not(.button-disabled)
          background: $btn-danger-hover-bg
          border-color: $btn-danger-hover-border
          color: $btn-danger-hover-color

        &:active:not(.button-disabled)
          background: $btn-danger-active-bg
          border-color: $btn-danger-active-border
          color: $btn-danger-active-color

      &.button-text
        color: $btn-danger-text-color

        &:hover:not(.button-disabled)
          background: $btn-danger-text-hover-bg
          color: $btn-danger-text-hover-color

        &:active:not(.button-disabled)
          background: $btn-danger-text-active-bg
          color: $btn-danger-text-active-color

      &.button-link
        color: $btn-danger-link-color

        &:hover:not(.button-disabled)
          color: $btn-danger-link-hover-color

        &:active:not(.button-disabled)
          color: $btn-danger-link-active-color

      &.button-dashed
        background: transparent
        border-color: $btn-danger-dashed-border
        border-style: dashed
        color: $btn-danger-dashed-color

        &:hover:not(.button-disabled)
          background: $btn-danger-dashed-hover-bg
          border-color: $btn-danger-dashed-hover-border
          color: $btn-danger-dashed-hover-color

        &:active:not(.button-disabled)
          background: $btn-danger-dashed-active-bg
          border-color: $btn-danger-dashed-active-border
          color: $btn-danger-dashed-active-color

    // 幽灵按钮
    &.button-ghost
      background: transparent

      &.button-default
        border-color: rgba(255, 255, 255, 0.2)
        color: rgba(255, 255, 255, 0.85)

        &:hover:not(.button-disabled)
          border-color: #fff
          color: #fff
          background: rgba(255, 255, 255, 0.1)

        &:active:not(.button-disabled)
          border-color: #fff
          color: #fff
          background: rgba(255, 255, 255, 0.2)

      &.button-primary
        border-color: $btn-primary-border
        color: $btn-primary-color

        &:hover:not(.button-disabled)
          border-color: $btn-primary-hover-border
          color: #fff
          background: $btn-primary-hover-bg

        &:active:not(.button-disabled)
          border-color: $btn-primary-active-border
          color: #fff
          background: $btn-primary-active-bg

      &.button-dashed
        border-color: rgba(255, 255, 255, 0.2)
        border-style: dashed
        color: rgba(255, 255, 255, 0.85)

        &:hover:not(.button-disabled)
          border-color: #fff
          color: #fff
          background: rgba(255, 255, 255, 0.1)

        &:active:not(.button-disabled)
          border-color: #fff
          color: #fff
          background: rgba(255, 255, 255, 0.2)

      &.button-text
        border-color: transparent
        color: rgba(255, 255, 255, 0.65)

        &:hover:not(.button-disabled)
          color: #fff
          background: rgba(255, 255, 255, 0.1)

        &:active:not(.button-disabled)
          color: #fff
          background: rgba(255, 255, 255, 0.2)

      &.button-link
        border-color: transparent
        color: $btn-primary-color

        &:hover:not(.button-disabled)
          color: $btn-primary-hover-color

        &:active:not(.button-disabled)
          color: $btn-primary-active-color

    // 块级按钮
    &.button-block
      width: 100%

    // 图标按钮
    &.button-icon-only
      padding: 0
      width: var(--pt-btn-height)

      .button-icon
        margin: 0

    // 图标样式
    .button-icon
      display: inline-flex
      align-items: center
      font-size: 14px

@keyframes button-loading
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg) 