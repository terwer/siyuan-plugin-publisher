@import '../base'

.pt-btn
  button-base()
  font-weight: 400
  text-align: center
  background-image: none
  border: 1px solid transparent
  box-shadow: 0 2px 0 rgba(0, 0, 0, 0.015)
  color: $text-color
  background: $bg-color
  border-color: $border-color

  &:hover
    color: $primary-color
    background: $bg-color-light
    border-color: $primary-color

  &:active
    color: $primary-color
    background: $bg-color-light
    border-color: $primary-color

  &[disabled]
    color: $text-color-disabled
    background: $bg-color-light
    border-color: $border-color
    disabled()

  // 尺寸变体
  &-sm
    height: $height-sm
    padding: 0 $spacing-sm
    font-size: $font-size-sm
    border-radius: $border-radius-sm

  &-lg
    height: $height-lg
    padding: 0 $spacing-lg
    font-size: $font-size-lg
    border-radius: $border-radius-lg

  // 类型变体
  &-primary
    color: $gray-1
    background: $primary-color
    border-color: $primary-color
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.12)
    box-shadow: 0 2px 0 rgba(0, 0, 0, 0.045)

    &:hover
      background: lighten($primary-color, 10%)
      border-color: lighten($primary-color, 10%)
      color: $gray-1

    &:active
      background: darken($primary-color, 10%)
      border-color: darken($primary-color, 10%)
      color: $gray-1

    &[disabled]
      color: rgba(255, 255, 255, 0.35)
      background: $primary-color
      border-color: $primary-color

  &-dashed
    color: $text-color
    background: $bg-color
    border-color: $border-color
    border-style: dashed

    &:hover
      color: $primary-color
      background: $bg-color-light
      border-color: $primary-color

    &:active
      color: $primary-color
      background: $bg-color-light
      border-color: $primary-color

    &[disabled]
      color: $text-color-disabled
      background: $bg-color-light
      border-color: $border-color

  &-text
    color: $text-color
    background: transparent
    border-color: transparent
    box-shadow: none

    &:hover
      color: $primary-color
      background: $bg-color-light
      border-color: transparent

    &:active
      color: $primary-color
      background: $bg-color-light
      border-color: transparent

    &[disabled]
      color: $text-color-disabled
      background: transparent
      border-color: transparent

  &-link
    color: $primary-color
    background: transparent
    border-color: transparent
    box-shadow: none

    &:hover
      color: lighten($primary-color, 10%)
      background: transparent
      border-color: transparent

    &:active
      color: darken($primary-color, 10%)
      background: transparent
      border-color: transparent

    &[disabled]
      color: $text-color-disabled
      background: transparent
      border-color: transparent

  // 危险按钮
  &-danger
    color: $gray-1
    background: $error-color
    border-color: $error-color
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.12)
    box-shadow: 0 2px 0 rgba(0, 0, 0, 0.045)

    &:hover
      background: lighten($error-color, 10%)
      border-color: lighten($error-color, 10%)
      color: $gray-1

    &:active
      background: darken($error-color, 10%)
      border-color: darken($error-color, 10%)
      color: $gray-1

    &[disabled]
      color: rgba(255, 255, 255, 0.35)
      background: $error-color
      border-color: $error-color

  // 幽灵按钮
  &-ghost
    color: $text-color
    background: transparent
    border-color: $border-color

    &:hover
      color: $primary-color
      background: transparent
      border-color: $primary-color

    &:active
      color: $primary-color
      background: transparent
      border-color: $primary-color

    &[disabled]
      color: $text-color-disabled
      background: transparent
      border-color: $border-color

  // 加载状态
  &-loading
    position: relative
    cursor: default

    &::before
      position: absolute
      top: -1px
      right: -1px
      bottom: -1px
      left: -1px
      z-index: 1
      display: block
      background: $bg-color
      border-radius: inherit
      opacity: 0.35
      transition: opacity $animation-duration-base
      content: ''
      pointer-events: none

  // 图标
  &-icon
    margin-right: $spacing-xs
    font-size: $font-size-base
    vertical-align: -0.125em

  // 按钮组
  &-group
    display: inline-flex
    vertical-align: middle

    .pt-btn
      position: relative
      z-index: 1

      &:not(:first-child)
        margin-left: -1px

      &:not(:first-child):not(:last-child)
        border-radius: 0

      &:first-child
        border-top-right-radius: 0
        border-bottom-right-radius: 0

      &:last-child
        border-top-left-radius: 0
        border-bottom-left-radius: 0

      &:hover
        z-index: 2

      &:active
        z-index: 3

      &[disabled]
        z-index: 0 