@import '../variables.styl'

.pt-btn
  position relative
  display inline-flex
  align-items center
  justify-content center
  font-weight 400
  white-space nowrap
  text-align center
  background-image none
  border $pt-border-width $pt-border-style transparent
  box-shadow 0 2px 0 rgba(0, 0, 0, 0.015)
  cursor pointer
  transition all $pt-transition-duration $pt-transition-timing
  user-select none
  touch-action manipulation
  height $pt-height-base
  padding 4px 15px
  font-size $pt-font-size-base
  border-radius $pt-border-radius-base
  color $pt-text-color
  background $pt-bg-color
  border-color $pt-border-color

  &:hover
    color $pt-primary-color
    background $pt-bg-color-light
    border-color $pt-primary-color

  &:active
    color $pt-primary-color
    background $pt-bg-color-light
    border-color $pt-primary-color

  &[disabled]
    color $pt-text-color-disabled
    background $pt-bg-color-light
    border-color $pt-border-color
    cursor not-allowed

  // 尺寸变体
  &-sm
    height $pt-height-sm
    padding 0 7px
    font-size $pt-font-size-sm
    border-radius $pt-border-radius-sm

  &-lg
    height $pt-height-lg
    padding 0 15px
    font-size $pt-font-size-lg
    border-radius $pt-border-radius-lg

  // 类型变体
  &-primary
    color #fff
    background $pt-primary-color
    border-color $pt-primary-color
    text-shadow 0 -1px 0 rgba(0, 0, 0, 0.12)
    box-shadow 0 2px 0 rgba(0, 0, 0, 0.045)

    &:hover
      background lighten($pt-primary-color, 10%)
      border-color lighten($pt-primary-color, 10%)
      color #fff

    &:active
      background darken($pt-primary-color, 10%)
      border-color darken($pt-primary-color, 10%)
      color #fff

    &[disabled]
      color rgba(255, 255, 255, 0.35)
      background $pt-primary-color
      border-color $pt-primary-color

  &-dashed
    color $pt-text-color
    background $pt-bg-color
    border-color $pt-border-color
    border-style dashed

    &:hover
      color $pt-primary-color
      background $pt-bg-color-light
      border-color $pt-primary-color

    &:active
      color $pt-primary-color
      background $pt-bg-color-light
      border-color $pt-primary-color

    &[disabled]
      color $pt-text-color-disabled
      background $pt-bg-color-light
      border-color $pt-border-color

  &-text
    color $pt-text-color
    background transparent
    border-color transparent
    box-shadow none

    &:hover
      color $pt-primary-color
      background $pt-bg-color-light
      border-color transparent

    &:active
      color $pt-primary-color
      background $pt-bg-color-light
      border-color transparent

    &[disabled]
      color $pt-text-color-disabled
      background transparent
      border-color transparent

  &-link
    color $pt-primary-color
    background transparent
    border-color transparent
    box-shadow none

    &:hover
      color lighten($pt-primary-color, 10%)
      background transparent
      border-color transparent

    &:active
      color darken($pt-primary-color, 10%)
      background transparent
      border-color transparent

    &[disabled]
      color $pt-text-color-disabled
      background transparent
      border-color transparent

  // 危险按钮
  &-danger
    color #fff
    background $pt-error-color
    border-color $pt-error-color
    text-shadow 0 -1px 0 rgba(0, 0, 0, 0.12)
    box-shadow 0 2px 0 rgba(0, 0, 0, 0.045)

    &:hover
      background lighten($pt-error-color, 10%)
      border-color lighten($pt-error-color, 10%)
      color #fff

    &:active
      background darken($pt-error-color, 10%)
      border-color darken($pt-error-color, 10%)
      color #fff

    &[disabled]
      color rgba(255, 255, 255, 0.35)
      background $pt-error-color
      border-color $pt-error-color

  // 幽灵按钮
  &-ghost
    color $pt-text-color
    background transparent
    border-color $pt-border-color

    &:hover
      color $pt-primary-color
      background transparent
      border-color $pt-primary-color

    &:active
      color $pt-primary-color
      background transparent
      border-color $pt-primary-color

    &[disabled]
      color $pt-text-color-disabled
      background transparent
      border-color $pt-border-color

  // 加载状态
  &-loading
    position relative
    cursor default

    &::before
      position absolute
      top -1px
      right -1px
      bottom -1px
      left -1px
      z-index 1
      display block
      background $pt-bg-color
      border-radius inherit
      opacity 0.35
      transition opacity $pt-transition-duration
      content ''
      pointer-events none

  // 图标
  &-icon
    margin-right $pt-margin-xs
    font-size $pt-font-size-base
    vertical-align -0.125em

  // 按钮组
  &-group
    display inline-flex
    vertical-align middle

    .pt-btn
      position relative
      z-index 1

      &:not(:first-child)
        margin-left -1px

      &:not(:first-child):not(:last-child)
        border-radius 0

      &:first-child
        border-top-right-radius 0
        border-bottom-right-radius 0

      &:last-child
        border-top-left-radius 0
        border-bottom-left-radius 0

      &:hover
        z-index 2

      &:active
        z-index 3

      &[disabled]
        z-index 0 