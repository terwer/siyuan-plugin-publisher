@import '../base/variables.styl'
@import '../base/index.styl'

.pt-button
  position: relative
  display: inline-flex
  align-items: center
  justify-content: center
  font-weight: 400
  white-space: nowrap
  text-align: center
  background-image: none
  border: 1px solid transparent
  box-shadow: 0 2px 0 rgba(0, 0, 0, 0.015)
  cursor: pointer
  transition: all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1)
  user-select: none
  touch-action: manipulation
  height: $pt-button-height
  padding: $pt-button-padding
  font-size: $pt-font-size-base
  border-radius: $pt-border-radius-base
  color: $pt-text-color
  background: $pt-button-default-bg
  border-color: $pt-button-default-border

  &:hover
    color: $pt-primary-color
    background: $pt-button-default-bg
    border-color: $pt-primary-color

  &:active
    color: $pt-primary-color-active
    background: $pt-button-default-bg
    border-color: $pt-primary-color-active

  &-primary
    color: $pt-button-primary-color
    background: $pt-primary-color
    border-color: $pt-primary-color
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.12)
    box-shadow: 0 2px 0 rgba(0, 0, 0, 0.045)

    &:hover
      background: $pt-primary-color-hover
      border-color: $pt-primary-color-hover
      color: $pt-button-primary-color

    &:active
      background: $pt-primary-color-active
      border-color: $pt-primary-color-active
      color: $pt-button-primary-color

  &-dashed
    color: $pt-text-color
    background: $pt-button-default-bg
    border-color: $pt-button-default-border
    border-style: dashed

    &:hover
      color: $pt-primary-color
      background: $pt-button-default-bg
      border-color: $pt-primary-color

    &:active
      color: $pt-primary-color-active
      background: $pt-button-default-bg
      border-color: $pt-primary-color-active

  &-text
    color: $pt-text-color
    background: transparent
    border-color: transparent
    box-shadow: none

    &:hover
      color: $pt-text-color
      background: rgba(0, 0, 0, 0.018)
      border-color: transparent

    &:active
      color: $pt-text-color
      background: rgba(0, 0, 0, 0.028)
      border-color: transparent

  &-link
    color: $pt-primary-color
    background: transparent
    border-color: transparent
    box-shadow: none

    &:hover
      color: $pt-primary-color-hover
      background: transparent
      border-color: transparent

    &:active
      color: $pt-primary-color-active
      background: transparent
      border-color: transparent

  &-small
    height: $pt-button-height-sm
    padding: $pt-button-padding-sm
    font-size: $pt-font-size-sm
    border-radius: $pt-border-radius-base

  &-large
    height: $pt-button-height-lg
    padding: $pt-button-padding-lg
    font-size: $pt-font-size-lg
    border-radius: $pt-border-radius-base

  &-loading
    position: relative
    cursor: default

    &:before
      position: absolute
      top: -1px
      right: -1px
      bottom: -1px
      left: -1px
      z-index: 1
      display: block
      background: $pt-button-default-bg
      border-radius: inherit
      opacity: 0.35
      transition: opacity 0.2s
      content: ''
      pointer-events: none

  &-disabled
    color: $pt-disabled-color
    background: $pt-disabled-bg
    border-color: $pt-disabled-border
    text-shadow: none
    box-shadow: none
    cursor: not-allowed

    &:hover
      color: $pt-disabled-color
      background: $pt-disabled-bg
      border-color: $pt-disabled-border

    &:active
      color: $pt-disabled-color
      background: $pt-disabled-bg
      border-color: $pt-disabled-border

  &-danger
    color: $pt-error-color
    background: $pt-button-default-bg
    border-color: $pt-error-color

    &:hover
      color: $pt-error-color-hover
      background: $pt-button-default-bg
      border-color: $pt-error-color-hover

    &:active
      color: $pt-error-color-active
      background: $pt-button-default-bg
      border-color: $pt-error-color-active

    &.pt-button-primary
      color: $pt-button-primary-color
      background: $pt-error-color
      border-color: $pt-error-color
      text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.12)
      box-shadow: 0 2px 0 rgba(0, 0, 0, 0.045)

      &:hover
        background: $pt-error-color-hover
        border-color: $pt-error-color-hover
        color: $pt-button-primary-color

      &:active
        background: $pt-error-color-active
        border-color: $pt-error-color-active
        color: $pt-button-primary-color

  &-ghost
    color: $pt-button-ghost-color
    background: transparent
    border-color: $pt-button-ghost-border

    &:hover
      color: $pt-primary-color
      background: transparent
      border-color: $pt-primary-color

    &:active
      color: $pt-primary-color-active
      background: transparent
      border-color: $pt-primary-color-active

  &-block
    width: 100%

  &-icon
    margin-right: $pt-spacing-sm
    font-size: $pt-font-size-base
    line-height: 1

  &-suffix-icon
    margin-left: $pt-spacing-sm
    font-size: $pt-font-size-base
    line-height: 1

  &-loading-icon
    margin-right: $pt-spacing-sm
    font-size: $pt-font-size-base
    line-height: 1

    .loading-spinner
      display: inline-block
      width: $pt-font-size-base
      height: $pt-font-size-base
      border: 2px solid $pt-button-primary-color
      border-radius: 50%
      border-top-color: transparent
      animation: button-loading-spin 1s infinite linear

@keyframes button-loading-spin
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg) 