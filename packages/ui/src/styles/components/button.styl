#publisherApp
  .pt-btn
    // 基础样式
    position: relative
    display: inline-flex
    align-items: center
    justify-content: center
    height: 32px
    padding: 4px 12px
    min-width: 80px
    border-radius: $border-radius-base
    border: 1px solid $border-color-base
    background: #fff
    color: $text-color
    font-size: $font-size-base
    line-height: 1.5715
    cursor: pointer
    transition: all $animation-duration-base $animation-timing-function-base
    user-select: none
    white-space: nowrap
    box-shadow: 0 2px 0 rgba(0, 0, 0, 0.02)

    &:hover:not(.pt-btn--disabled)
      color: $primary-color
      border-color: $primary-color
      background: #fff

    &:active:not(.pt-btn--disabled)
      color: darken($primary-color, 8%)
      border-color: darken($primary-color, 8%)
      background: #fff

    // 尺寸
    &--sm
      height: 24px
      padding: 0 7px
      font-size: 12px
      min-width: 64px

    &--lg
      height: 40px
      padding: 0 15px
      font-size: 16px
      min-width: 96px

    // 类型
    &--primary
      background: $primary-color
      border-color: $primary-color
      color: #fff
      box-shadow: 0 2px 0 rgba(0, 0, 0, 0.045)
      &:hover:not(.pt-btn--disabled)
        background: lighten($primary-color, 8%)
        border-color: lighten($primary-color, 8%)
        color: #fff
      &:active:not(.pt-btn--disabled)
        background: darken($primary-color, 8%)
        border-color: darken($primary-color, 8%)
        color: #fff

    &--dashed
      color: $text-color
      background-color: #fff
      border-color: $border-color-base
      border-style: dashed
      &:hover:not(.pt-btn--disabled)
        color: $primary-color
        border-color: $primary-color
        background: #fff

    &--text
      color: $text-color
      background-color: transparent
      border-color: transparent
      box-shadow: none
      &:hover:not(.pt-btn--disabled)
        color: $primary-color
        background: rgba(0, 0, 0, 0.04)

    &--link
      color: $primary-color
      background-color: transparent
      border-color: transparent
      box-shadow: none
      text-decoration: underline
      &:hover:not(.pt-btn--disabled)
        color: lighten($primary-color, 8%)

    // 危险状态
    &--danger
      color: $error-color
      border-color: $error-color
      &:hover:not(.pt-btn--disabled)
        color: lighten($error-color, 8%)
        border-color: lighten($error-color, 8%)
        background: #fff
      &.pt-btn--primary
        background: $error-color
        border-color: $error-color
        color: #fff
        box-shadow: 0 2px 0 rgba(0, 0, 0, 0.045)
        &:hover:not(.pt-btn--disabled)
          background: lighten($error-color, 8%)
          border-color: lighten($error-color, 8%)
          color: #fff

    // 幽灵模式
    &--ghost
      background: transparent !important
      border-color: currentColor
      color: inherit
      box-shadow: none
      &:hover:not(.pt-btn--disabled)
        color: $primary-color
        border-color: $primary-color
        background: transparent !important

    // 禁用状态
    &--disabled
      cursor: not-allowed
      opacity: 0.65
      pointer-events: none

    // 加载状态
    &--loading
      cursor: default
      opacity: 0.85
      pointer-events: none

    // 块级按钮
    &--block
      width: 100%

    // 图标按钮
    &--icon-only
      padding: 0
      min-width: 32px
      width: 32px
      height: 32px

    // 图标
    &__icon
      margin-right: 8px
      font-size: 14px
      line-height: 1

    // 加载动画
    &__loading
      margin-right: 8px
      animation: pt-spin 1s linear infinite

    &__spinner
      width: 14px
      height: 14px
      animation: pt-spin 1s linear infinite

@keyframes pt-spin
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)

#publisherApp
  .pt-btn
    &--shape-circle
      min-width: @height
      padding: 0
      border-radius: 50%

    &--shape-round
      border-radius: 32px

    &--two-chars
      &::first-letter
        letter-spacing: 0.34em
      > *:not(.pt-btn__icon)
        margin-right: -0.34em 