// 间距系统
$tg-spacing-xs = 4px
$tg-spacing-sm = 8px
$tg-spacing-md = 16px
$tg-spacing-lg = 24px
$tg-spacing-xl = 32px

// 字体系统
$tg-font-size-sm = 12px
$tg-font-size-base = 14px
$tg-font-size-lg = 16px
$tg-font-size-xl = 18px

// 颜色系统
$tg-color-primary = #1677ff
$tg-color-success = #52c41a
$tg-color-warning = #faad14
$tg-color-error = #ff4d4f
$tg-color-info = #1677ff

// 文字颜色
$tg-text-color = rgba(0, 0, 0, 0.85)
$tg-text-color-secondary = rgba(0, 0, 0, 0.45)

// 边框颜色
$tg-border-color = #d9d9d9
$tg-border-radius = 2px

// 组件尺寸
$tg-height-base = 32px
$tg-height-lg = 40px
$tg-height-sm = 24px

// 暗色主题变量
html[data-theme-mode="dark"]
  --tg-color-primary = #1668dc
  --tg-text-color = rgba(255, 255, 255, 0.85)
  --tg-text-color-secondary = rgba(255, 255, 255, 0.45)
  --tg-border-color = #434343
