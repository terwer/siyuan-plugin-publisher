// 间距系统 (8px 倍数)
$tg-spacing-xs = 4px
$tg-spacing-sm = 12px
$tg-spacing-md = 16px
$tg-spacing-lg = 24px
$tg-spacing-xl = 32px

// 字体系统
$tg-font-size-sm = 12px
$tg-font-size-base = 14px
$tg-font-size-lg = 16px
$tg-font-size-xl = 20px

// 行高系统
$tg-line-height-base = 1.5715
$tg-line-height-sm = 1.5
$tg-line-height-lg = 1.75

// 字重系统
$tg-font-weight-regular = 400
$tg-font-weight-medium = 500
$tg-font-weight-semibold = 600
$tg-font-weight-bold = 700

// 组件尺寸
$tg-height-base = 32px
$tg-height-lg = 40px
$tg-height-sm = 24px

// 按钮宽度
$tg-button-width-base = 64px
$tg-button-width-lg = 80px
$tg-button-width-sm = 48px

// 按钮内边距
$tg-button-padding-base = 16px
$tg-button-padding-lg = 24px
$tg-button-padding-sm = 12px

// 边框圆角
$tg-border-radius-base = 2px
$tg-border-radius-sm = 1px
$tg-border-radius-lg = 4px

// 基础颜色
$tg-color-white = #ffffff
$tg-color-black = #000000

// 品牌色
$tg-color-primary = #1677ff
$tg-color-primary-hover = #4096ff
$tg-color-primary-active = #0958d9
$tg-color-primary-light = rgba(22, 119, 255, 0.2)

// 功能色
$tg-color-success = #52c41a
$tg-color-success-hover = #73d13d
$tg-color-success-active = #389e0d
$tg-color-success-light = rgba(82, 196, 26, 0.2)

$tg-color-warning = #faad14
$tg-color-warning-hover = #ffc53d
$tg-color-warning-active = #d48806
$tg-color-warning-light = rgba(250, 173, 20, 0.2)

$tg-color-error = #ff4d4f
$tg-color-error-hover = #ff7875
$tg-color-error-active = #d9363e
$tg-color-error-light = rgba(255, 77, 79, 0.2)

$tg-color-info = #1677ff
$tg-color-info-hover = #4096ff
$tg-color-info-active = #0958d9
$tg-color-info-light = rgba(22, 119, 255, 0.2)

// 中性色
$tg-color-text = rgba(0, 0, 0, 0.85)
$tg-color-text-secondary = rgba(0, 0, 0, 0.45)
$tg-color-text-disabled = rgba(0, 0, 0, 0.25)
$tg-color-text-placeholder = rgba(0, 0, 0, 0.25)

$tg-color-border = #d9d9d9
$tg-color-border-disabled = #d9d9d9

$tg-color-bg = #ffffff
$tg-color-bg-hover = #f5f5f5
$tg-color-bg-active = #e6e6e6
$tg-color-bg-disabled = #f5f5f5

// 消息提示颜色
$tg-color-success-bg = #f6ffed
$tg-color-success-border = #b7eb8f
$tg-color-error-bg = #fff2f0
$tg-color-error-border = #ffccc7
$tg-color-warning-bg = #fffbe6
$tg-color-warning-border = #ffe58f
$tg-color-info-bg = #e6f7ff
$tg-color-info-border = #91d5ff

// 暗色主题变量
$tg-color-success-bg-dark = #162312
$tg-color-success-border-dark = #274916
$tg-color-error-bg-dark = #2a1215
$tg-color-error-border-dark = #58181c
$tg-color-warning-bg-dark = #2b2111
$tg-color-warning-border-dark = #594214
$tg-color-info-bg-dark = #111b26
$tg-color-info-border-dark = #112a45

// Dialog 相关变量
$tg-dialog-width = 520px
$tg-dialog-min-width = 320px
$tg-dialog-max-width = 90vw
$tg-dialog-header-height = 56px
$tg-dialog-footer-height = 56px
$tg-box-shadow-lg = 0 4px 12px rgba(0,0,0,0.15)

// CSS 变量
:root
  // 品牌色
  --tg-color-primary: $tg-color-primary
  --tg-color-primary-hover: $tg-color-primary-hover
  --tg-color-primary-active: $tg-color-primary-active
  --tg-color-primary-light: $tg-color-primary-light

  // 功能色
  --tg-color-success: $tg-color-success
  --tg-color-success-hover: $tg-color-success-hover
  --tg-color-success-active: $tg-color-success-active
  --tg-color-success-light: $tg-color-success-light
  --tg-color-success-bg: $tg-color-success-bg
  --tg-color-success-border: $tg-color-success-border

  --tg-color-warning: $tg-color-warning
  --tg-color-warning-hover: $tg-color-warning-hover
  --tg-color-warning-active: $tg-color-warning-active
  --tg-color-warning-light: $tg-color-warning-light
  --tg-color-warning-bg: $tg-color-warning-bg
  --tg-color-warning-border: $tg-color-warning-border

  --tg-color-error: $tg-color-error
  --tg-color-error-hover: $tg-color-error-hover
  --tg-color-error-active: $tg-color-error-active
  --tg-color-error-light: $tg-color-error-light
  --tg-color-error-bg: $tg-color-error-bg
  --tg-color-error-border: $tg-color-error-border

  --tg-color-info: $tg-color-info
  --tg-color-info-hover: $tg-color-info-hover
  --tg-color-info-active: $tg-color-info-active
  --tg-color-info-light: $tg-color-info-light
  --tg-color-info-bg: $tg-color-info-bg
  --tg-color-info-border: $tg-color-info-border

  // 中性色
  --tg-color-text: $tg-color-text
  --tg-color-text-secondary: $tg-color-text-secondary
  --tg-color-text-disabled: $tg-color-text-disabled
  --tg-color-text-placeholder: $tg-color-text-placeholder

  --tg-color-border: $tg-color-border
  --tg-color-border-disabled: $tg-color-border-disabled

  --tg-color-bg: $tg-color-bg
  --tg-color-bg-hover: $tg-color-bg-hover
  --tg-color-bg-active: $tg-color-bg-active
  --tg-color-bg-disabled: $tg-color-bg-disabled

// 暗黑模式
html[data-theme-mode="dark"]
  // 功能色
  --tg-color-success-bg: $tg-color-success-bg-dark
  --tg-color-success-border: $tg-color-success-border-dark
  --tg-color-error-bg: $tg-color-error-bg-dark
  --tg-color-error-border: $tg-color-error-border-dark
  --tg-color-warning-bg: $tg-color-warning-bg-dark
  --tg-color-warning-border: $tg-color-warning-border-dark
  --tg-color-info-bg: $tg-color-info-bg-dark
  --tg-color-info-border: $tg-color-info-border-dark

  // 中性色
  --tg-color-text: rgba(255, 255, 255, 0.85)
