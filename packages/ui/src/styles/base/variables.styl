// 主题色
$primary-color = #1677ff
$success-color = #52c41a
$warning-color = #faad14
$error-color = #ff4d4f

// 文字颜色
$heading-color = rgba(0, 0, 0, 0.88)
$text-color = rgba(0, 0, 0, 0.65)
$text-color-secondary = rgba(0, 0, 0, 0.45)
$disabled-color = rgba(0, 0, 0, 0.25)

// 边框和圆角
$border-radius-base = 4px
$border-color-base = #d9d9d9
$border-color-split = #f0f0f0

// 阴影
$box-shadow-base = 0 2px 8px rgba(0, 0, 0, 0.15)

// 字体
$font-size-base = 14px
$font-size-lg = 16px
$font-size-sm = 12px
$font-family = -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
  'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',
  'Noto Color Emoji'

// 间距
$spacing-unit = 8px
$spacing-xs = $spacing-unit
$spacing-sm = $spacing-unit * 2
$spacing-md = $spacing-unit * 3
$spacing-lg = $spacing-unit * 4
$spacing-xl = $spacing-unit * 5

// 动画
$animation-duration-base = 0.2s
$animation-duration-slow = 0.3s
$animation-duration-fast = 0.1s
$animation-timing-function-base = cubic-bezier(0.645, 0.045, 0.355, 1)

// 响应式断点
$screen-xs = 480px
$screen-sm = 576px
$screen-md = 768px
$screen-lg = 992px
$screen-xl = 1200px
$screen-xxl = 1600px

// 按钮变量
// 基础尺寸
$btn-height-base = 32px
$btn-height-lg = 40px
$btn-height-sm = 24px
$btn-padding-base = 0 $spacing-md
$btn-padding-lg = 0 $spacing-lg
$btn-padding-sm = 0 $spacing-sm
$btn-font-size-base = $font-size-base
$btn-font-size-lg = $font-size-lg
$btn-font-size-sm = $font-size-sm
$btn-radius-base = $border-radius-base + 2px
$btn-radius-lg = $border-radius-base + 4px
$btn-radius-sm = $border-radius-base

// 按钮颜色
$btn-default-bg = #ffffff
$btn-default-border = $border-color-base
$btn-default-color = $heading-color
$btn-default-hover-bg = lighten($border-color-base, 50%)
$btn-default-hover-border = $border-color-base
$btn-default-hover-color = $heading-color
$btn-default-active-bg = darken($btn-default-hover-bg, 5%)
$btn-default-active-border = $border-color-base
$btn-default-active-color = $heading-color

// 主要按钮
$btn-primary-bg = $primary-color
$btn-primary-border = $primary-color
$btn-primary-color = #ffffff
$btn-primary-hover-bg = lighten($primary-color, 10%)
$btn-primary-hover-border = lighten($primary-color, 10%)
$btn-primary-hover-color = #ffffff
$btn-primary-active-bg = darken($primary-color, 10%)
$btn-primary-active-border = darken($primary-color, 10%)
$btn-primary-active-color = #ffffff

// 危险按钮
$btn-danger-bg = $error-color
$btn-danger-border = $error-color
$btn-danger-color = #ffffff
$btn-danger-hover-bg = lighten($error-color, 10%)
$btn-danger-hover-border = lighten($error-color, 10%)
$btn-danger-hover-color = #ffffff
$btn-danger-active-bg = darken($error-color, 10%)
$btn-danger-active-border = darken($error-color, 10%)
$btn-danger-active-color = #ffffff 