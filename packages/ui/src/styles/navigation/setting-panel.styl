@import '../base'

#publisherApp
  .pt-setting-panel
    background: $bg-color
    border-radius: $border-radius-base
    box-shadow-base()
    transition-base()

    &.pt-panel-bordered
      border: 1px solid $border-color-split

  .pt-panel-header
    padding: $spacing-lg $spacing-xl
    border-bottom: 1px solid $border-color-split

  .pt-panel-title
    margin: 0
    color: $text-color
    font-weight: 500
    font-size: $font-size-lg
    line-height: $line-height-lg

  .pt-panel-body
    padding: $spacing-xl
    min-height: 200px

    &.pt-panel-loading
      opacity: 0.6
      pointer-events: none

  .pt-panel-footer
    padding: $spacing-lg $spacing-xl
    border-top: 1px solid $border-color-split
    background: $footer-bg

  .pt-footer-actions
    display: flex
    justify-content: flex-end
    gap: $spacing-sm

  .pt-btn
    padding: $spacing-xs $spacing-lg
    font-size: $font-size-base
    border-radius: $border-radius-base
    border: 1px solid transparent
    cursor: pointer
    transition-base()

    &.pt-btn-default
      background: $btn-default-bg
      border-color: $btn-default-border
      color: $btn-default-color

      &:hover
        background: $btn-default-hover-bg
        border-color: $btn-default-hover-border
        color: $btn-default-hover-color

    &.pt-btn-primary
      background: $primary-color
      border-color: $primary-color
      color: $text-color-inverse

      &:hover
        background: $primary-color-hover
        border-color: $primary-color-hover

/* 主题变量 */
:root
  --panel-bg: $bg-color
  --panel-shadow: $shadow-color
  --border-color: $border-color-split
  --footer-bg: $footer-bg
  --btn-default-bg: $btn-default-bg
  --btn-default-border: $btn-default-border
  --btn-default-color: $btn-default-color
  --btn-default-hover-bg: $btn-default-hover-bg
  --btn-default-hover-border: $btn-default-hover-border
  --btn-default-hover-color: $primary-color

[data-theme="dark"]
  --panel-bg: $bg-color-dark
  --panel-shadow: $shadow-color-dark
  --border-color: $border-color-split-dark
  --footer-bg: $footer-bg-dark
  --btn-default-bg: $btn-default-bg-dark
  --btn-default-border: $btn-default-border-dark
  --btn-default-color: $btn-default-color-dark
  --btn-default-hover-bg: $btn-default-hover-bg-dark
  --btn-default-hover-border: $btn-default-hover-border-dark
  --btn-default-hover-color: $primary-color 