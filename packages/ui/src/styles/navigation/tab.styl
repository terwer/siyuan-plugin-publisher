@import '../base'

.pt-tab
  display: flex
  width: 100%
  height: 100%
  background: $bg-color
  border-radius: $border-radius-base
  box-shadow-base()
  position: relative

  &--vertical
    flex-direction: row

    .pt-tab__header
      width: 100px
      transition-base()
      border-right: 1px solid $border-color-split
      position: absolute
      left: 0
      top: 0
      bottom: 0
      height: 100%
      flex-shrink: 0
      z-index: 10

      &--collapsed
        width: 0
        opacity: 0
        visibility: hidden
        border-right-color: transparent

  &__header
    position: absolute
    left: 0
    top: 0
    bottom: 0
    background: $bg-color
    flex-shrink: 0
    height: 100%
    z-index: 10

  &__nav
    width: 100px
    min-width: 100px
    height: 100%
    transition-base()
    list-style: none
    padding: 0
    margin: 0

  &__item
    display: flex
    width: 100%
    padding: $spacing-md $spacing-lg
    border: none
    background: none
    color: $text-color
    font-size: $font-size-base
    text-align: left
    cursor: pointer
    transition-base()
    position: relative

    &:hover:not(.pt-tab__item--active)
      background: $item-hover-bg

    &--active
      background: $primary-color
      color: $text-color-inverse
      &::after
        content: ''
        position: absolute
        right: 0
        top: 50%
        transform: translateY(-50%)
        height: 60%
        width: 3px
        background: $primary-color
        border-radius: 2px

    &--disabled
      cursor: not-allowed
      opacity: 0.5

  &__collapse-handle
    position: absolute
    left: 100px
    top: 22px
    width: 32px
    height: 32px
    padding: $spacing-xs
    background: $bg-color
    border: 1px solid $border-color-split
    border-radius: 50%
    box-shadow-base()
    cursor: pointer
    transition-base()
    z-index: 100
    transform: translateX(-50%)
    display: flex
    align-items: center
    justify-content: center

    .pt-tab--vertical .pt-tab__header--collapsed + &
      left: 4px
      background: $bg-color
      border-color: $border-color-split
      box-shadow-base()
      padding-left: $spacing-sm
      padding-right: $spacing-xs

    &:hover
      transform: translateX(-50%) scale(1.1)
      box-shadow: 0 4px 12px $shadow-color
      background: $item-hover-bg

  &__collapse-icon
    width: 16px
    height: 16px
    fill: $text-color
    transition-base()

    .pt-tab--vertical .pt-tab__header--collapsed + .pt-tab__collapse-handle &
      transform: rotate(180deg)

  &__content
    flex: 1
    min-width: 0
    height: 100%
    background: $bg-color
    padding: 2px $spacing-xs
    display: flex
    flex-direction: column
    overflow: hidden
    margin-left: 100px
    transition-base()

    &--collapsed
      margin-left: 0 