#publisherApp
  .pt-setting-group
    margin-bottom 12px

  .pt-group-title
    font-size 14px
    font-weight 500
    color var(--group-title-color)
    margin 0 0 0 6px
    padding-left 6px
    position relative
    line-height 1.3

    &::before
      content ""
      position absolute
      left -6px
      top 2px
      bottom 2px
      width 2px
      background var(--primary-color)
      border-radius 1px

  .pt-group-items
    background var(--group-bg)
    border-radius 6px
    padding 8px
    box-shadow 0 1px 2px 0 var(--group-shadow)

  .pt-nested-group
    margin-bottom 16px

    &:last-child
      margin-bottom 0

  .pt-nested-title
    font-size 13px
    font-weight 500
    color var(--nested-title-color)
    margin 0 0 8px
    padding-left 8px
    position relative
    line-height 1.3

    &::before
      content ""
      position absolute
      left 0
      top 2px
      bottom 2px
      width 2px
      background var(--nested-title-bg)
      border-radius 1px

  .pt-nested-items
    background var(--nested-bg)
    border-radius 4px
    padding 8px

  .pt-setting-item
    display flex
    align-items flex-start
    gap 8px
    margin-bottom 8px

    &:last-child
      margin-bottom 0

  .pt-item-label
    flex 0 0 var(--label-width, 120px)
    color var(--item-label-color)
    font-size 13px
    line-height 1.4
    padding-top 4px

  .pt-item-control
    flex 1
    min-width 0

  .pt-empty-state
    display flex
    align-items center
    justify-content center
    padding 24px
    color var(--empty-text-color)
    font-size 13px

/* 主题变量 */
:root
  --group-title-color rgba(0, 0, 0, 0.88)
  --group-bg #ffffff
  --group-shadow rgba(0, 0, 0, 0.06)
  --nested-title-color rgba(0, 0, 0, 0.75)
  --nested-title-bg #d9d9d9
  --nested-bg #fafafa
  --item-label-color rgba(0, 0, 0, 0.65)
  --empty-text-color rgba(0, 0, 0, 0.45)

[data-theme="dark"]
  --group-title-color rgba(255, 255, 255, 0.85)
  --group-bg #1f1f1f
  --group-shadow rgba(0, 0, 0, 0.25)
  --nested-title-color rgba(255, 255, 255, 0.75)
  --nested-title-bg #434343
  --nested-bg #141414
  --item-label-color rgba(255, 255, 255, 0.65)
  --empty-text-color rgba(255, 255, 255, 0.45) 