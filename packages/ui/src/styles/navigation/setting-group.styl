@import '../base'

#publisherApp
  .pt-setting-group
    margin-bottom: $spacing-md

  .pt-group-title
    font-size: $font-size-base
    font-weight: 500
    color: $text-color
    margin: 0 0 0 $spacing-xs
    padding-left: $spacing-xs
    position: relative
    line-height: $line-height-base

    &::before
      content: ""
      position: absolute
      left: -$spacing-xs
      top: 2px
      bottom: 2px
      width: 2px
      background: $primary-color
      border-radius: 1px

  .pt-group-items
    background: $bg-color
    border-radius: $border-radius-base
    padding: $spacing-sm
    box-shadow-base()

  .pt-nested-group
    margin-bottom: $spacing-lg

    &:last-child
      margin-bottom: 0

  .pt-nested-title
    font-size: $font-size-sm
    font-weight: 500
    color: $text-color-secondary
    margin: 0 0 $spacing-sm
    padding-left: $spacing-sm
    position: relative
    line-height: $line-height-base

    &::before
      content: ""
      position: absolute
      left: 0
      top: 2px
      bottom: 2px
      width: 2px
      background: $border-color-base
      border-radius: 1px

  .pt-nested-items
    background: $item-hover-bg
    border-radius: $border-radius-sm
    padding: $spacing-sm

  .pt-setting-item
    display: flex
    align-items: flex-start
    gap: $spacing-sm
    margin-bottom: $spacing-sm

    &:last-child
      margin-bottom: 0

  .pt-item-label
    flex: 0 0 var(--label-width, 120px)
    color: $text-color-secondary
    font-size: $font-size-sm
    line-height: $line-height-base
    padding-top: $spacing-xs

  .pt-item-control
    flex: 1
    min-width: 0

  .pt-empty-state
    display: flex
    align-items: center
    justify-content: center
    padding: $spacing-xl
    color: $text-color-disabled
    font-size: $font-size-sm

/* 主题变量 */
:root
  --group-title-color: $text-color
  --group-bg: $bg-color
  --group-shadow: $shadow-color
  --nested-title-color: $text-color-secondary
  --nested-title-bg: $border-color-base
  --nested-bg: $item-hover-bg
  --item-label-color: $text-color-secondary
  --empty-text-color: $text-color-disabled

[data-theme="dark"]
  --group-title-color: $text-color-dark
  --group-bg: $bg-color-dark
  --group-shadow: $shadow-color-dark
  --nested-title-color: $text-color-secondary-dark
  --nested-title-bg: $border-color-base-dark
  --nested-bg: $item-hover-bg-dark
  --item-label-color: $text-color-secondary-dark
  --empty-text-color: $text-color-disabled-dark 