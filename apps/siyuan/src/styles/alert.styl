.pt-alert-container
  position: fixed
  z-index: 1000
  max-width: 488px
  width: 100%
  display: flex
  flex-direction: column
  gap: 8px
  padding: 16px
  pointer-events: none
  top: 50%
  left: 50%
  transform: translate(-50%, -50%) translateY(-200px)

  &--top
    top: 24px
    left: 50%
    transform: translateX(-50%)

  &--topLeft
    top: 24px
    left: 24px
    transform: none

  &--topRight
    top: 24px
    right: 24px
    transform: none

  &--bottom
    bottom: 24px
    left: 50%
    transform: translateX(-50%)

  &--bottomLeft
    bottom: 24px
    left: 24px
    transform: none

  &--bottomRight
    bottom: 24px
    right: 24px
    transform: none

  &--center
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

.pt-alert
  position: relative
  padding: 12px 16px
  margin-bottom: 16px
  border: 1px solid
  border-radius: 8px
  box-shadow: 0 3px 6px -4px rgba(0,0,0,0.12), 0 6px 16px 0 rgba(0,0,0,0.08), 0 9px 28px 8px rgba(0,0,0,0.05)
  display: flex
  align-items: flex-start
  transition: all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1)
  background-clip: padding-box

  &__icon
    display: flex
    align-items: center
    margin-right: 12px
    font-size: 0

    &-svg
      flex-shrink: 0
      stroke: currentColor

  &__content
    flex: 1
    min-width: 0
    padding-right: 24px

  &__title
    font-size: 14px
    line-height: 1.5715
    font-weight: 500
    margin-bottom: 2px

  &__message
    font-size: 14px
    line-height: 1.5715

  &__description
    font-size: 13px
    line-height: 1.5715
    margin-top: 4px
    opacity: 0.85

  &__close
    position: absolute
    top: 16px
    right: 16px
    padding: 4px
    border: none
    background: transparent
    cursor: pointer
    color: inherit
    opacity: 0.45
    transition: opacity 0.2s

    &:hover
      opacity: 0.85

    &-icon
      display: block
      stroke: currentColor

// 浅色模式
.pt-alert--success
  background: #f6ffed
  border-color: #b7eb8f
  color: #52c41a

.pt-alert--info
  background: #e6f7ff
  border-color: #91d5ff
  color: #1890ff

.pt-alert--warning
  background: #fffbe6
  border-color: #ffe58f
  color: #faad14

.pt-alert--error
  background: #fff2f0
  border-color: #ffccc7
  color: #ff4d4f

// 暗黑模式
html[data-theme-mode="dark"]
  .pt-alert
    box-shadow: 0 3px 6px -4px rgba(0,0,0,0.48), 0 6px 16px 0 rgba(0,0,0,0.38), 0 9px 28px 8px rgba(0,0,0,0.35)

  .pt-alert--success
    background: #162312
    border-color: #274916
    color: #49aa19

  .pt-alert--info
    background: #111b26
    border-color: #153450
    color: #177ddc

  .pt-alert--warning
    background: #2b2111
    border-color: #594214
    color: #d89614

  .pt-alert--error
    background: #2a1215
    border-color: #58181c
    color: #dc4446

// 动画
@keyframes pt-alert-fade-in
  from
    opacity: 0
    transform: translateY(-20px)
  to
    opacity: 1
    transform: translateY(0)

@keyframes pt-alert-fade-out
  to
    opacity: 0
    transform: translateY(-20px)

.pt-alert-enter-active
  animation: pt-alert-fade-in 0.3s

.pt-alert-leave-active
  animation: pt-alert-fade-out 0.3s forwards